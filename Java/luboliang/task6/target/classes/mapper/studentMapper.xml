<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ptteng.MyBatis.StudentDao">
    <insert id="insert" keyProperty="id" useGeneratedKeys="true" parameterType="ptteng.model.Student">
      INSERT  INTO  student (name,profession,position,overview,salary,state,create_at,update_at) VALUES (#{name},#{profession},#{position},#{overview},#{salary},#{state},#{create_at},#{update_at})
    </insert>

    <delete id="delete" parameterType="long">
        DELETE from student WHERE  id=#{id}
    </delete>

    <update id="update"  parameterType="ptteng.model.Student">
       update  student  set name=#{name},position=#{position},overview=#{overview},salary=#{salary},state=#{state},update_at=#{update_at} where id=#{id}
    </update>

    <select id="select" resultType="ptteng.model.Student">
       select *from student
    </select>

   <select id="selectId" resultType="ptteng.model.Student" parameterType="long">
       select * from student where id=#{id}
   </select>

</mapper>